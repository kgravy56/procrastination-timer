{
  "name": "Procrastination Timer",
  "description": "Stops you from procrastinating by closing unproductive tabs",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "chrome.tabs",
    "activeTab"
  ],
  "background": {
  "service_worker": "background.js"
  },
  "action": {
    "default_title": "Stop Procrastinating",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "drink_water16.png",
    "32": "drink_water32.png",
    "48": "drink_water48.png",
    "128": "drink_water128.png"
  }
}
